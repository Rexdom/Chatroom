extends layout

block head
    link(rel='stylesheet', href='/stylesheets/user.css')

block content
    h1.h2.mb-3.text-center.font-weight-bold You can edit your information here
    div.row
        form.col-12.col-md-6.mb-3.mr-0.text-center(method="POST" action=url+"/user_name")
            h1.h4.mb-3.font-weight-normal.pb-2.border-bottom Change user name
            label.text-left(for="user_name") New user name
            input.form-control(type="text" name="user_name" placeholder="User Name" value=user autofocus="")
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Confirm
        form.col-12.col-md-6.mb-3.text-center(method="POST" action=url+"/password")
            h1.h4.mb-3.font-weight-normal.pb-2.border-bottom Change password
            label.text-left(for="password") Current password
            input.form-control(type="password" name="password" placeholder="Current Password" )
            label.text-left(for="new_password") New password
            input.form-control(type="password" name="new_password" placeholder="New Password" )
            button.btn.btn-lg.btn-primary.btn-block(type="submit") Confirm