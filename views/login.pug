extends layout

block head
    link(rel='stylesheet', href='/stylesheets/login.css')

block content
    form.form-signin.text-center(method="POST" action="")
        h1.h3.mb-3.font-weight-normal Please log in
        input.form-control(type="text" name="account" placeholder="Account" required autofocus="")
        input.form-control(type="password" name="password" placeholder="Password" required)
        button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
        h5.h6.mb-1 No account yet? Sign up#[a.h6(href="/signup") here]
